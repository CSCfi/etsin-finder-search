{
  "dynamic_templates": [
    {
      "title": {
        "path_match":   "title.*",
        "mapping": {
          "type": "text",
          "fields": {
            "english": {
              "type":     "text",
              "analyzer": "english"
            },
            "finnish": {
              "type":     "text",
              "analyzer": "finnish"
            }
          }
        }
      }
    },
    {
      "description": {
        "path_match":   "description.*",
        "mapping": {
          "type": "text",
          "fields": {
            "english": {
              "type":     "text",
              "analyzer": "english"
            },
            "finnish": {
              "type":     "text",
              "analyzer": "finnish"
            }
          }
        }
      }
    },
    {
      "org_or_person": {
        "match_pattern": "regex",
        "match": "^(creator|contributor|publisher|rights_holder|curator|is_output_of(\\..*source_organization|\\..*has_funding_agency))\\..*(name|identifier).*",
        "mapping": {
          "type": "text",
          "analyzer": "standard",
          "fields": {
            "keyword": {
              "type": "keyword"
            }
          }
        }
      }
    },
    {
      "org_or_person_not_indexed": {
        "match_pattern": "regex",
        "match": "^(creator|contributor|publisher|rights_holder|curator)\\..*(email|telephone|agent_type|homepage).*",
        "mapping": {
          "type": "text",
          "index": false
        }
      }
    },
    {
      "object_with_identifier_and_label": {
        "match_pattern": "regex",
        "match": "^(access_rights|access_rights\\.access_type|access_rights\\.license|field_of_science|infrastructure|file_type|other_identifier\\.type|is_output_of\\..*funder_type)\\..*(pref_label|title|identifier|description|definition).*",
        "mapping": {
          "type": "text",
          "analyzer": "standard",
          "fields": {
            "keyword": {
              "type": "keyword"
            }
          }
        }
      }
    },
    {
      "theme_fi": {
        "path_match": "theme.pref_label.fi",
        "mapping": {
          "type": "text",
          "copy_to": "all_keywords_fi"
        }
      }
    },
    {
      "theme_en": {
        "path_match": "theme.pref_label.en",
        "mapping": {
          "type": "text",
          "copy_to": "all_keywords_en"
        }
      }
    }
  ],
  "properties": {
    "creator_name": {
      "type": "text",
      "fields": {
        "keyword": {
          "type": "keyword"
        }
      }      
    },
    "organization_name_fi": {
      "type": "text",
      "fields": {
        "keyword": {
          "type": "keyword"
        }
      }      
    },
    "organization_name_en": {
      "type": "text",
      "fields": {
        "keyword": {
          "type": "keyword"
        }
      }      
    },
    "project_name_fi": {
      "type": "text",
      "fields": {
        "keyword": {
          "type": "keyword"
        }
      }      
    },
    "project_name_en": {
      "type": "text",
      "fields": {
        "keyword": {
          "type": "keyword"
        }
      }      
    },
    "identifier": {
      "type": "text",
      "fields": {
        "keyword": {
          "type": "keyword"
        }
      }
    },
    "preferred_identifier": {
      "type": "text",
      "fields": {
        "keyword": {
          "type": "keyword"
        }
      }
    },
    "dataset_version_set": {
      "type": "text",
      "fields": {
        "keyword": {
          "type": "keyword"
        }
      }
    },
    "date_modified": {
      "type": "date"
    },
    "keyword": {
      "type": "text",
      "copy_to": ["all_keywords_fi", "all_keywords_en"]
    },
    "all_keywords_fi": {
      "type": "keyword"
    },
    "all_keywords_en": {
      "type": "keyword"
    },
    "preservation_state": {
      "type": "integer"
    }
  }
}