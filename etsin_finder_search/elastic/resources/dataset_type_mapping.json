{
  "dynamic_templates": [
    {
      "title": {
        "path_match":   "title.*",
        "mapping": {
          "type": "text",
          "analyzer": "etsin_long_ngram_analyzer"
        }
      }
    },
    {
      "description": {
        "path_match":   "description.*",
        "mapping": {
          "type": "text",
          "analyzer": "etsin_ngram_analyzer"
        }
      }
    },
    {
      "org_or_person": {
        "match_pattern": "regex",
        "match": "^(creator|contributor|publisher|rights_holder|curator)\\..*(name|identifier).*",
        "mapping": {
          "type": "text",
          "analyzer": "etsin_ngram_analyzer",
          "fields": {
            "keyword": {
              "type": "keyword"
            }
          }
        }
      }
    },
    {
      "org_or_person_not_indexed": {
        "match_pattern": "regex",
        "match": "^(creator|contributor|publisher|rights_holder|curator)\\..*(email|telephone|agent_type|homepage).*",
        "mapping": {
          "type": "text",
          "index": false
        }
      }
    },
    {
      "object_with_identifier_and_label": {
        "match_pattern": "regex",
        "match": "^(access_rights|access_rights\\.access_type|access_rights\\.license|theme|field_of_science|infrastructure|file_type|other_identifier\\.type)\\..*(pref_label|title|identifier|description|definition).*",
        "mapping": {
          "type": "text",
          "analyzer": "standard",
          "fields": {
            "keyword": {
              "type": "keyword"
            }
          }
        }
      }
    }
  ],
  "properties": {
    "creator_name": {
      "type": "text",
      "fields": {
        "keyword": {
          "type": "keyword"
        }
      }      
    },
    "organization_name_fi": {
      "type": "text",
      "fields": {
        "keyword": {
          "type": "keyword"
        }
      }      
    },
    "organization_name_en": {
      "type": "text",
      "fields": {
        "keyword": {
          "type": "keyword"
        }
      }      
    },
    "project_name_fi": {
      "type": "text",
      "fields": {
        "keyword": {
          "type": "keyword"
        }
      }      
    },
    "project_name_en": {
      "type": "text",
      "fields": {
        "keyword": {
          "type": "keyword"
        }
      }      
    },
    "identifier": {
      "type": "text",
      "fields": {
        "keyword": {
          "type": "keyword"
        }
      }
    },
    "preferred_identifier": {
      "type": "text",
      "fields": {
        "keyword": {
          "type": "keyword"
        }
      }
    },
    "dataset_version_set": {
      "type": "text",
      "fields": {
        "keyword": {
          "type": "keyword"
        }
      }
    },
    "date_modified": {
      "type": "date"
    },
    "keyword": {
      "type": "text",
      "copy_to": ["theme.label.en", "theme.label.fi"]
    },
    "preservation_state": {
      "type": "integer"
    }
  }
}