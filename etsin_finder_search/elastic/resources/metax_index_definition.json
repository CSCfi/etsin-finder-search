{
  "settings" : {
    "index" : {
      "number_of_shards" : 2,
      "number_of_replicas" : 1
    },
    "analysis": {
      "tokenizer": {
        "classic_tokenizer": {
          "type": "classic"
        },
        "edge_ngram_tokenizer": {
          "type": "edge_ngram",
          "min_gram": 3,
          "max_gram": 15
        },
        "ngram_tokenizer": {
          "type": "ngram",
          "min_gram": 3,
          "max_gram": 15
        },
        "long_edge_ngram_tokenizer": {
          "type": "edge_ngram",
          "min_gram": 3,
          "max_gram": 20
        },
        "long_ngram_tokenizer": {
          "type": "ngram",
          "min_gram": 3,
          "max_gram": 20
        }
      },
      "analyzer": {
        "etsin_classic_analyzer": {
          "tokenizer": "classic_tokenizer",
          "filter": [
            "lowercase"
          ]
        },
        "etsin_edge_ngram_analyzer": {
          "type": "custom",
          "tokenizer": "edge_ngram_tokenizer",
          "filter": [
            "lowercase"
          ]
        },
        "etsin_ngram_analyzer": {
          "type": "custom",
          "tokenizer": "ngram_tokenizer",
          "filter": [
            "lowercase"
          ]
        },
        "etsin_long_edge_ngram_analyzer": {
          "type": "custom",
          "tokenizer": "long_edge_ngram_tokenizer",
          "filter": [
            "lowercase"
          ]
        },
        "etsin_long_ngram_analyzer": {
          "type": "custom",
          "tokenizer": "long_ngram_tokenizer",
          "filter": [
            "lowercase"
          ]
        }
      }
    }
  }
}
